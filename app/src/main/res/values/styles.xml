        </style>-->

    <!-- 汛期 -->
    <style name="AppTheme.Orange" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="themeColor">@color/theme_orange</item>
        <item name="homeTitle">汛期</item>
        <item name="themeColorSelector">@drawable/button_orange_selector</item>
        <item name="textColorTabSelector">@drawable/textcolor_orange_tab_selector</item>
    </style>
    <!-- 非汛期 -->
    <style name="AppTheme.Blue" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="themeColor">@color/theme_blue</item>
        <item name="homeTitle">非汛期</item>
        <item name="themeColorSelector">@drawable/button_blue_selector</item>
        <item name="textColorTabSelector">@drawable/textcolor_blue_tab_selector</item>
    </style>

