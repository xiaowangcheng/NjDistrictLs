<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/level"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/zhsl_you" />

        <TextView
            android:id="@+id/primarypollutant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AQI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/affect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@mipmap/zhsl_jiankang"
        android:drawablePadding="3dp"
        android:drawableStart="@mipmap/zhsl_jiankang"
        android:text=""
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/affect"
        android:layout_alignRight="@id/affect"
        android:layout_below="@id/affect"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/zhsl_cuoshi"
        android:drawablePadding="3dp"
        android:drawableStart="@mipmap/zhsl_cuoshi"
        android:text=""
        android:textColor="@color/text_black" />

</RelativeLayout>